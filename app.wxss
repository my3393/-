/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.clearfix:after {content: ""; display: block; height:0; clear:both; visibility: hidden;}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.2);
    z-index: 9999;
    /* display: none;  */
}

.footer{
   height: 100rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  font-size: 24rpx;
  
}