/**index.wxss**/
page{
  background: #f2f2f2;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.left{
   width: 160rpx;
   background: #f2f2f2;
   height: 520rpx;
   overflow: hidden;
   overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
   float: left;
  
}
.public{
  margin-top: 20rpx;
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  padding: 20rpx;
  background: #fff;
  box-sizing: border-box;
  
}
.fons{
  color: #000;
}
.enter{
  float: right;
  width: 16rpx;
  height: 26rpx;
}
.dev{
  width: 90%;
  display: inline-block;
}
.enter image{
  width: 100%;
  height: 100%;
}
.dher{
  margin-top: 20rpx;
   width: 100%;
  overflow: scroll;
  white-space: nowrap; 
  -webkit-overflow-scrolling: touch;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
textarea{
  font-size: 26rpx;
}
.dher image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}

.der{
  position: relative;
  display: inline-block;
}
.detel{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 10rpx;
  right: 25rpx;
}
.detel image{
  width: 100%;
  height: 100%;
}
.container {
  border-top: 1px solid #f2f2f2;
}

.take {
  padding-left: 30rpx;
  line-height: 100rpx;
  height: 100rpx;
  background-color: #fff;
}

imgcut {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 90rpx;
  width: 100%;
}

.footer {
  line-height: 90rpx;
  position: fixed;
  bottom: 0px;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.footer view{
  color: var(--color-primary);
  padding: 0 20rpx;
}
