/* pages/my-fan/my-fan.wxss */
page{
  background: #f2f2f2;
}
.top{
  margin: 30rpx;
  color :#9A9A9A;
}
.nav{
  padding: 20rpx;
  box-sizing: border-box;
}
.rank{
  margin-bottom: 20rpx;
}
.rank-head{
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 15rpx;
  border-radius: 50%;
  overflow: hidden;
}
.rank-head image{
  width: 100%;
  height: 100%;
}
.rank-name{
  vertical-align: middle;
}

.dzk{
  position: absolute;
  top: 35%;
  left: 50%;
  width: 300rpx;
  height: 220rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  transform: translate(-50%,-50%)
}
.dzk>image{
  width: 100%;
  height: 100%;
}
.meiy{
  margin-top: 20rpx;
}