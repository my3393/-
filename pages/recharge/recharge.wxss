/* pages/recharge/recharge.wxss */
page{
  background: #f2f2f2;
}

.public{
  margin-top: 20rpx;
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  padding: 20rpx;
  background: #fff;
  box-sizing: border-box;
  
}
.left{
  display: inline-block;
}
.right{
  float: right;
}
.go{
  margin-top: 20rpx;
  color: #F861AA;
}
.xuan{
  width: calc((100% - 80rpx)/3);
  height: 125rpx;
  margin-left: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  text-align: center;
  display: inline-block;
  margin-top: 20rpx;
}
.yo{
  font-weight: 600;
  margin-bottom: 10rpx;
}
.rmb{
  font-weight: 300;
}
.rmbs{
  color: #F861AA;
  display: inline-block;
}
.active{
  background: #F861AA;
  color: #fff !important;
}

.submit{
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  border-radius: 40rpx;
  height: 80rpx;
  margin-bottom: 30rpx;
  background: #F861AA;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin-top: 40rpx;
}
.cuss{
  padding: 20rpx;
  box-sizing: border-box;
  color: #A3A3A3;
  font-size: 28rpx;
}