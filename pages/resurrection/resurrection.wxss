/* pages/resurrection/resurrection.wxss */
@import '../home/home.wxss';

.play-img{
  position: relative
}
.res-top{
  position: absolute;
  right: 0;
  top: 40rpx;
  width: 100rpx;
  height: 40rpx;
  background: #F8E461;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  text-align: center;
  font-size: 28rpx;
}
.res-g{
 display: flex;
 justify-content: space-between;
 padding: 20rpx;
 box-sizing: border-box;
 
 font-size: 28rpx;
 color: #BBBBBB;

}
.res-g image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}
.res-gu{
  color: #F861AA;
}

.prompt{
  position: absolute;
  top: 20%;
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  text-align: center;
}
.konw{
  margin: 20rpx;
  width: 100%;
  text-align: center;
  color: #F861AA;
}

.sai-yds{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 12;
}

.sai-yd{
	position:absolute;
  width: calc(100% - 40rpx);
  right:20rpx;
	top: 36%;
  background: #fff;
  padding: 20rpx 0;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
}
.divis{
  width: calc((100% - 80rpx)/3);
  margin-left: 20rpx;
  background: #D8D8D8;
  color: #fff;
  border-radius: 12rpx;
  display: inline-block;
  text-align: center;
  height: 75rpx;
  line-height: 75rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
}
.sai-active{
  background: #F861AA;
}
.act{
  background: #F861AA;
}