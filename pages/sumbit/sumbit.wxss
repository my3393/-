/* pages/sumbit/sumbit.wxss */

page{
  background: #f2f2f2;
  font-size: 30rpx;
}
.public{
  margin-top: 20rpx;
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  padding: 20rpx;
  background: #fff;
  box-sizing: border-box;
  
}
.fons{
  color: #000;
}
.enter{
  float: right;
  width: 16rpx;
  height: 26rpx;
}
.dev{
  width: 90%;
  display: inline-block;
}
.enter image{
  width: 100%;
  height: 100%;
}
.texta{
  width: 100%;
  height: 300rpx;
}
.shang{
  color: #BBBBBB;
  color: 24rpx;
}
.dher{
  margin-top: 20rpx;
   width: 100%;
  overflow: scroll;
  white-space: nowrap; 
  -webkit-overflow-scrolling: touch;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
textarea{
  font-size: 26rpx;
}
.dher image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}
.imgs{
  display: inline-block;
}
.submit{
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  border-radius: 40rpx;
  height: 80rpx;
  margin-bottom: 30rpx;
  background: #F861AA;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin-top: 40rpx;
}

/* 赛区选择 */

.ilebels{
    width: 100%;
    height: 600rpx;
    background-color: white;
    position: fixed;
    bottom: 0;
    left: 0;
}
.tops{
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    box-sizing: border-box;
    line-height: 80rpx;
}
.quxiao{
    color: #999999;
    font-size: 32rpx;
}
.sure{
    color: #1AAD19;
    font-size: 32rpx;
}
.left{
   width: 160rpx;
   background: #f2f2f2;
   height: 520rpx;
   overflow: scroll;
   float: left;
   -webkit-overflow-scrolling: touch;
}
.right{
  float: right;
  width: calc(100% - 160rpx);
}
.clearfix:after {content: ""; display: block; height:0; clear:both; visibility: hidden;}
.left view{
  width: 160rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #878787;
}
.sai-x{
  width: calc((100% - 50rpx)/3);
  margin-left: 10rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  border: 1rpx solid #878787;
  color: #878787;
  border-radius: 8rpxl;
  display: inline-block;
  margin-top: 20rpx;
}
.active{
  color: #fff;
  background: #F861AA;
  border: 0;
  border-radius: 6rpx;
}
.acti{
  background: #fff;
  
